<h1>Let's have some burgers!</h1>
<div class="row"> 
  <div class="col-6">
  <h2>Burgers Made!</h2>


  {{#each burgers}}
    {{#unless munched}}
      {{> burgers/burger-block munched=true}}
    {{/unless}}
  {{/each}}

</div>

<div class="col-6">
<h2>Munched!</h2>



  {{#each burgers}}
    {{#if munched}}
      {{> burgers/burger-block munched=false}}
    {{/if}}
  {{/each}}

</div>
</div>


<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burg">Burger Name:</label>
    <input type="text" id="burg" name="name">
    <button type="submit">Add Burger</button>
  </div>
</form>
