<h1>Let's have some burgers!</h1>

<h2>Burgers Made!</h2>

<ul>
  {{#each burgers}}
    {{#unless munched}}
      {{> cats/cat-block sleep=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Munched!</h2>

<ul>
  {{#each burgers}}
    {{#if munched}}
      {{> cats/cat-block sleep=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="munched">Munched?</label><br>
    <input type="radio" name="munched" value="1" checked> Munched!<br>
    <input type="radio" name="munched" value="0"> Awake
  </div>

  <button type="submit">Add Burger</button>
</form>
